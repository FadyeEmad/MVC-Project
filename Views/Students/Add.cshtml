@model StudentWithDepartmentsList
@{
    ViewData["Title"] = "Add";
}

<h1>Add Student</h1>
<form method="post" action="/Students/SaveAdd">

    <div>
        <label>Name</label>
        <input id="Name" name="Name" value="@Model?.Name" class="form form-control"/>
    </div>
    <div>
        <label>Age</label>
        <input id="Age" name="Age" value="@Model?.Age" class="form form-control" />
    </div>
    <div>
        <label>Departmentid</label>
        <select id="Departmentid" name="Departmentid" class="form form-control">
            @foreach (var item in Model.DepartmentLiat)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <input type="submit" value="Create" class="btn btn-primary"/>
</form>
<a href="/Students/ShowAll"> Back To List</a>
