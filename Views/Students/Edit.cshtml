@model StudentWithDepartmentsList
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" asp-action="SaveEdit" asp-controller="Students" asp-route-id="@Model.Id">
    <div>
        @* <label>Name</label>
        <input type="text" value="@Model.Name" id="Name" name="Name" class="form form-control" /> *@
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Age">Age</label>
        <input asp-for="Age" class="form form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Departmentid">Department</label>
        <select asp-for="Departmentid" class="form form-control">
            @foreach (var item in Model.DepartmentList)
            {
                if(@item.Id==Model.Departmentid)
                {
                    <option value="@item.Id" selected >@item.Name</option>
                }
                else
                {
                <option value="@item.Id">@item.Name</option> 
                }
            }
        </select>
    </div>
    <div class="d-flex gap-2 mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
@*         <a href="/Students/ShowAll" class="btn btn-primary">Back</a>
 *@        <a asp-action="ShowAll" asp-controller="Students" class="btn btn-dar">Back</a>
        <a asp-action="DetailsVW" asp-controller="Students" asp-route-id="@Model.Id" class="btn btn-dark">More Details</a>
    </div>
</form>
